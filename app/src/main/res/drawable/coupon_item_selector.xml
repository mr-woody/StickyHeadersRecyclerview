<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <solid android:color="@color/alpha_10p_black" />
                    <padding
                        android:bottom="1dp"
                        android:right="0.5dp"
                        android:top="0.5dp" />
                    <corners android:topRightRadius="6dp" android:bottomRightRadius="6dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/coupon_item_normal"/>
            <item>
                <bitmap android:gravity="right|top" android:src="@drawable/mark_choose_icon" />
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <solid android:color="@color/alpha_15p_black" />
                    <padding
                        android:bottom="1dp"
                        android:right="0.5dp"
                        android:top="0.5dp" />
                    <corners android:topRightRadius="6dp" android:bottomRightRadius="6dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/coupon_item_pres"/>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <solid android:color="@color/alpha_10p_black" />
                    <padding
                        android:bottom="1dp"
                        android:right="0.5dp"
                        android:top="0.5dp" />
                    <corners android:topRightRadius="6dp" android:bottomRightRadius="6dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/coupon_item_normal"/>
        </layer-list>
    </item>
</selector>